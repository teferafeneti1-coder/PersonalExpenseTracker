<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="420.0" prefWidth="420.0" spacing="15.0" alignment="CENTER"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="personalexpensetracker.LoginController">
    <padding><Insets top="40" right="50" bottom="40" left="50"/></padding>

    <Label text="Finance Tracker" style="-fx-font-size: 22; -fx-font-weight: bold;"/>

    <VBox spacing="10">
        <Label text="Username"/>
        <TextField fx:id="usernameField" promptText="Enter or choose username"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Password"/>
        <PasswordField fx:id="passwordField" promptText="Enter password"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Confirm Password (for register)"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Repeat password"/>
    </VBox>

    <Label fx:id="statusLabel" text="" textFill="RED" alignment="CENTER" wrapText="true"/>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Login" onAction="#handleLogin" prefWidth="120" prefHeight="40"/>
        <Button text="Register" onAction="#handleRegister" prefWidth="120" prefHeight="40"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
</VBox>